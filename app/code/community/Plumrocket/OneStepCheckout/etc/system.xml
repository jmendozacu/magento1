						<terms_conditions translate="label">
							<label>Display Terms &amp; Conditions</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</terms_conditions>
						<terms_conditions_content translate="label">
							<label>Terms &amp; Conditions Content</label>
							<frontend_type>select</frontend_type>
							<source_model>onestepcheckout/values_termsConditionsPage</source_model>
							<sort_order>70</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<terms_conditions>1</terms_conditions>
							</depends>
						</terms_conditions_content>
						<footer_content translate="label">
							<label>Footer Content</label>
							<frontend_type>editor</frontend_type>
							<sort_order>80</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[
								<script type="text/javascript">
									var head = document.getElementsByTagName('head')[0];
									var newScript = document.createElement('script');
									newScript.src = wysiwygConfig;
									newScript.type = 'text/javascript';
									head.appendChild(newScript);
								</script>
								<button style="" onclick="catalogWysiwygEditor.open(wysiwygEditorPath, 'onestepcheckout_additional_display_settings_footer_content')" class="scalable " type="button"><span>WYSIWYG Editor</span></button>
								]]></comment>
						</footer_content>
					</fields>
				</additional_display_settings>

				<design_settings translate="label"> 
					<label>Design Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>40</sort_order>
