/**
 * Order by SKU Failed Items renderer
 */

/** @var $this Mage_Checkout_Block_Cart_Item_Renderer */
$_item = $this->getItem();
$displayBothPrices = $this->helper('tax')->displayCartBothPrices();
$additionalInfoBlock = $this->getProductAdditionalInformationBlock();
?>
<li class="item">
    <img src="<?php echo $this->getProductThumbnail()->resize(90); ?>"
        srcset="<?php echo $this->getProductThumbnail()->resize(90); ?> 1x, <?php echo $this->getProductThumbnail()->resize(90 * 2); ?> 2x"
        class="product-image"
        width="90" height="90"
        alt="<?php echo $this->htmlEscape($this->getProductName()) ?>" />

    <div class="product-shop">
        <div class="f-fix">
            <div class="col-description">
                <h2 class="product-name"><?php echo $this->escapeHtml($this->getProductName()) ?></h2>
                <?php if ($additionalInfoBlock):?>
                    <?php echo $additionalInfoBlock->setItem($_item)->toHtml() ?>
                <?php endif;?>
            </div>
            <?php if ($this->helper('wishlist')->isAllowInCart()) : ?>
                <div class="col-wishlist">&nbsp;</div>
            <?php endif ?>
            <div class="col-unit-price">&nbsp;</div>
            <div class="cart-qty">
                <span class="cart-header-item"><?php echo $this->__('Qty') ?>:</span> <input name="cart[<?php echo $_item->getId() ?>][qty]" value="<?php echo $this->getQty() ?>" size="4" title="<?php echo $this->__('Qty') ?>" class="input-text qty disabled" maxlength="12" type="text" disabled="disabled"/>
            </div>
            <a href="<?php echo $this->getDeleteUrl()?>" title="<?php echo $this->__('Remove item')?>" class="btn-remove item-remove col-delete-item"><?php echo $this->__('Remove item')?></a>
        </div>
    </div>
</li>
