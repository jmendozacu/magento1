<config>
    <modules>
        <TV_All>
            <version>1.0.0</version>
        </TV_All>
    </modules>    	
    <global>
        <blocks>
            <all>
                <class>TV_All_Block</class>
            </all>
        </blocks>
        <helpers>
            <all>
                <class>TV_All_Helper</class>
            </all>
        </helpers>
        <models>
            <core>
                <rewrite>
                    <layout>TV_All_Model_Core_Layout</layout>
                </rewrite>
            </core>
            <all>
                <class>TV_All_Model</class>
            </all>
        </models>
        <resources>
            <all_setup>
                <setup>
                    <module>TV_All</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </all_setup>
            <all_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </all_write>
            <all_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </all_read>
        </resources>
    </global>
</config>