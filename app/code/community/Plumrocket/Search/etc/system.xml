<?xml version="1.0"?>
<config>
    <tabs>
        <plumrocket>
            <label>
            <![CDATA[
                <div style="padding-left:22px; background: url(data:image/png;base64,) left 50% no-repeat;">Plumrocket Inc.</div> ]]>
            </label>
            <sort_order>101</sort_order>
        </plumrocket>
    </tabs>
    
    <sections>
        <psearch>
            <label>Search Autocomplete and Suggest</label>
            <tab>plumrocket</tab>
            <sort_order>1650</sort_order>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            
            <groups>
                <general>
                    <label>General</label>
                    <expanded>1</expanded>
                    <sort_order>1</sort_order>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    
                    <fields>
                        <version translate="label">
                            <frontend_type>text</frontend_type>
                            <frontend_model>psearch/system_config_version</frontend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </version>
                        <enable translate="label">
                            <label>Enable Extension</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <serial translate="label">
                            <label>Serial Key</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>plumbase/system_config_form_field</frontend_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[
                                Your can find <strong>Serial Key</strong> in your account at <a target="_blank" href="https://store.plumrocket.com/downloadable/customer/products/">store.plumrocket.com</a>. For manual <a target="_blank" href="http://wiki.plumrocket.com/wiki/License_Installation">click here</a>.
                            ]]></comment>
                        </serial>

                    </fields>
                </general>

                <search>
                    <label>Search Settings</label>
                    <expanded>0</expanded>
                    <sort_order>2</sort_order>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    
                    <fields>
                        <reindex translate="label">
                            <frontend_type>text</frontend_type>
                            <frontend_model>psearch/system_config_reindex</frontend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reindex>
                        <product_attributes translate="label">
                            <label>Searchable Product Attributes</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>psearch/system_config_attributes</frontend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </product_attributes>
                        <product_attributes_comment translate="label">
                            <frontend_type>note</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Drag &amp; drop attributes that should be used in search. You can set &quot;priority&quot; for Searchable Attributes. Products with matching higher priority attributes will be displayed on top of search results.</comment>
                        </product_attributes_comment>
                        <search_by_tags translate="label">
                            <label>Search By Tags</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </search_by_tags>
                        <filter_categories_enable translate="label">
                            <label>Show Category Filter</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </filter_categories_enable>
                        <filter_categories_exclude translate="label">
                            <label>Hidden Categories in Filter</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>psearch/system_config_source_categories</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Selected categories will be searchable but hidden to the visitor</comment>
                            <depends>
                                <filter_categories_enable>1</filter_categories_enable>
                            </depends>
                        </filter_categories_exclude>
                        <query_delay translate="label">
                            <label>Query Delay</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>In milliseconds, e.g. 500 means 0.5 of a second</comment>
                        </query_delay>
                        <like_separator>
                            <label>Search Condition</label>
                            <frontend_type>select</frontend_type>
                            <source_model>psearch/system_config_source_andor</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </like_separator>

                        <general_additional_tab type="group" translate="label">
                            <label>Additional Settings</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <fields>
                                <general_additional translate="label">
                                    <label>Standard Configuration</label>
                                    <frontend_type>text</frontend_type>
                                    <frontend_model>psearch/system_config_generalAdditional</frontend_model>
                                    <sort_order>1</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </general_additional>
                            </fields>
                        </general_additional_tab>

                    </fields>
                </search>
                
                <product_suggestion>
                    <label>Product Suggestion Settings</label>
                    <sort_order>3</sort_order>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>

                    <fields>
                        <enable translate="label">
                            <label>Display Product Suggestions</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <count translate="label">
                            <label>Max. Number of Suggestions</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enable>1</enable>
                            </depends>
                        </count>
                        <thumbs_show translate="label">
                            <label>Show Thumbnails</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enable>1</enable>
                            </depends>
                        </thumbs_show>
                        <price_show translate="label">
                            <label>Show Price</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enable>1</enable>
                            </depends>
                        </price_show>
                        <rating_show translate="label">
                            <label>Show Rating</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enable>1</enable>
                            </depends>
                        </rating_show>
                        <short_description_show translate="label">
                            <label>Show Short Description</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enable>1</enable>
                            </depends>
                        </short_description_show>
                        <short_description_lenght translate="label">
                            <label>Max. Length of Short Description</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enable>1</enable>
                                <short_description_show>1</short_description_show>
                            </depends>
                        </short_description_lenght>
                    </fields>
                </product_suggestion>

                <keyword_suggestion>
                    <label>Keyword Suggestions Settings</label>
                    <sort_order>4</sort_order>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>

                    <fields>
                        <category_enable translate="label">
                            <label>Display Category Suggestions</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category_enable>
                        <category_count translate="label">
                            <label>Max. Number of Category Suggestions</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <category_enable>1</category_enable>
                            </depends>
                        </category_count>
                        <terms_enable translate="label">
                            <label>Display Keyword Suggestions</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </terms_enable>
                        <terms_count translate="label">
                            <label>Max. Number of Keyword Suggestions</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <terms_enable>1</terms_enable>
                            </depends>
                        </terms_count>
                    </fields>
                </keyword_suggestion>

            </groups>
        </psearch>
    </sections>
</config>