<config>
	<tabs>
		<plumrocket translate="label" module="onestepcheckout">
			<label><![CDATA[
				<div style="padding-left:22px; background: url(data:image/png;base64,) left 50% no-repeat;">Plumrocket Inc.</div> ]]></label>
			<class>plumrocket_section</class>
			<sort_order>101</sort_order>
		</plumrocket>
	</tabs>
	<sections>
		<onestepcheckout translate="label" module="onestepcheckout">
			<label>One Step Checkout</label>
			<tab>plumrocket</tab>
			<sort_order>1610</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label"> 
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<version translate="label">
							<frontend_type>text</frontend_type>
							<frontend_model>onestepcheckout/system_config_version</frontend_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</version>
						<enabled translate="label">
							<label>Enable Extension</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<serial translate="label">
							<label>Serial Key</label>
							<frontend_type>text</frontend_type>
							<frontend_model>plumbase/system_config_form_field</frontend_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[
								Your can find <strong>Serial Key</strong> in your account at <a target="_blank" href="https://store.plumrocket.com/downloadable/customer/products/">store.plumrocket.com</a>. For manual <a target="_blank" href="http://wiki.plumrocket.com/wiki/License_Installation">click here</a>.
							]]></comment>
						</serial>
					</fields>
				</general>

				<address_form_settings translate="label"> 
					<label>Address Form Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<display_addresses translate="label">
							<label>Display Address</label>
							<frontend_type>select</frontend_type>
							<source_model>onestepcheckout/values_addressSortOrder</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>"Single Address Form" allows to merge both billing and shipping address fields into one form</comment>
						</display_addresses>
						<default_country translate="label">
							<label>Default Country</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_country</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</default_country>
						<address_fields translate="label">
							<label>Enable Address Fields</label>
							<frontend_type>text</frontend_type>
							<frontend_model>onestepcheckout/system_config_formFields</frontend_model>
							<backend_model>onestepcheckout/backend_formFields</backend_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Please note: if user choses to register an account and password field is not enabled above, then passwords will be generated automatically and sent by email.</comment>
						</address_fields>
						<enable_autocomplete translate="label">
							<label>Enable Address Autocomplete</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Uses Google Address Autocomplete API to auto-correct and find address when user starts typing.</comment>
						</enable_autocomplete>
						<google_api_key translate="label">
							<label>Google API Key</label>
							<frontend_type>text</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<enable_autocomplete>1</enable_autocomplete>
							</depends>
							<validate>required-entry</validate>
							<comment><![CDATA[Google API Key is required for Google Address Autocomplete functionality. <a target="_blank" href="https://developers.google.com/maps/web/">Click here</a> to find out more on how to obtain Google API Key.]]></comment>
						</google_api_key>
						<newsletter_subscription translate="label">
							<label>Display Newsletter Subscription Checkbox</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</newsletter_subscription>
					</fields>
				</address_form_settings>
				
				<additional_display_settings translate="label"> 
					<label>Additional Display Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>30</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<shipping_method translate="label">
							<label>Default Shipping Method</label>
							<frontend_type>select</frontend_type>
							<source_model>onestepcheckout/values_shippingMethods</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</shipping_method>
						<payment_method translate="label">
							<label>Default Payment Method</label>
							<frontend_type>select</frontend_type>
							<source_model>onestepcheckout/values_paymentMethods</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</payment_method>

                        <rewards_enable translate="label">
                            <label>Enable Reward Point</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>onestepcheckout/system_config_rewards</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </rewards_enable>
						<rewards_form translate="label">
							<label>Display Reward Points Form</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <depends>
                                <rewards_enable>1</rewards_enable>
                            </depends>
						</rewards_form>

						<discount_form translate="label">
							<label>Display Discount Code Form</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
