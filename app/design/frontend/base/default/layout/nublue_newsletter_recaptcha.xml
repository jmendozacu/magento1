        </reference>
        <!-- for RWD/DEFAULT -->
        <reference name="footer.newsletter">
            <block type="core/template" name="nublue.newsletter_recaptcha" as="newsletter_recaptcha" template="nublue/newsletter_recaptcha/recaptcha.phtml" />
            <block type="core/template" name="nublue.newsletter_recaptchareg" as="newsletter_recaptchareg" template="nublue/newsletter_recaptcha/recaptchareg.phtml" />
        </reference>
