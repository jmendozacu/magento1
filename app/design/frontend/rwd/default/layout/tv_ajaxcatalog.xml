<?xml version="1.0"?>
<layout version="1.0.0">
    <catalog_category_view>
        <reference name="head">
            <action method="addJs">
                <script>tv/jquery/jquery-1.10.2.min.js</script>
            </action>        
            <action method="addJs">
                <script>tv/jquery/jquery-noconflict.js</script>
            </action>
            <action method="addJs">
                <script>tv/jquery/jquery-ui-1.10.4.min.js</script>
            </action>
            <action method="addItem">
                <type>js_css</type>
                <name>tv/jquery/jquery-ui-1.10.4.min.css</name>
            </action>
        </reference>
        <reference name="content">
            <block type="ajaxcatalog/ajax" name="ajaxcatalog" template="tv/ajaxcatalog/ajax.phtml"/>            
        </reference>
    </catalog_category_view>
    <catalogsearch_result_index>
